<GridLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:background="@drawable/tile_background"
   android:elevation="@dimen/elevation_low"
   android:padding="@dimen/small_board_padding"
   tools:context="assignment5.GameActivity">

   <Button android:id="@+id/wordsmall1"
       android:layout_height="@dimen/tile_size"
       android:layout_width="@dimen/tile_size"
       android:padding="@dimen/tile_padding"
       android:background="@drawable/wordtile"
                android:layout_column="0" android:layout_row="0"/>
   <Button android:id="@+id/wordsmall2"
       android:layout_height="@dimen/tile_size"
       android:layout_width="@dimen/tile_size"
       android:padding="@dimen/tile_padding"
       android:background="@drawable/wordtile"
                android:layout_column="1" android:layout_row="0"/>
   <Button android:id="@+id/wordsmall3"
       android:layout_height="@dimen/tile_size"
       android:layout_width="@dimen/tile_size"
       android:padding="@dimen/tile_padding"
       android:background="@drawable/wordtile"
                android:layout_column="2" android:layout_row="0"/>
   <Button android:id="@+id/wordsmall4"
       android:layout_height="@dimen/tile_size"
       android:layout_width="@dimen/tile_size"
       android:padding="@dimen/tile_padding"
       android:background="@drawable/wordtile"
                android:layout_column="0" android:layout_row="1"/>
   <Button android:id="@+id/wordsmall5"
       android:layout_height="@dimen/tile_size"
       android:layout_width="@dimen/tile_size"
       android:padding="@dimen/tile_padding"
       android:background="@drawable/wordtile"
                android:layout_column="1" android:layout_row="1"/>
   <Button android:id="@+id/wordsmall6"
       android:layout_height="@dimen/tile_size"
       android:layout_width="@dimen/tile_size"
       android:padding="@dimen/tile_padding"
       android:background="@drawable/wordtile"
                android:layout_column="2" android:layout_row="1"/>
   <Button android:id="@+id/wordsmall7"
       android:layout_height="@dimen/tile_size"
       android:layout_width="@dimen/tile_size"
       android:padding="@dimen/tile_padding"
       android:background="@drawable/wordtile"
                android:layout_column="0" android:layout_row="2"/>
   <Button android:id="@+id/wordsmall8"
       android:layout_height="@dimen/tile_size"
       android:layout_width="@dimen/tile_size"
       android:padding="@dimen/tile_padding"
       android:background="@drawable/wordtile"
                android:layout_column="1" android:layout_row="2"/>
   <Button android:id="@+id/wordsmall9"
       android:layout_height="@dimen/tile_size"
       android:layout_width="@dimen/tile_size"
       android:padding="@dimen/tile_padding"
       android:background="@drawable/wordtile"
                android:layout_column="2" android:layout_row="2"/>
</GridLayout>
